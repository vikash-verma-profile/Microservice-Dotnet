{
  "Routes": [
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Orders",
      "DownstreamScheme": "https",
      "ServiceName": "OrderService",
      "UpstreamPathTemplate": "/api/gateway/order/get-orders",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/v1.0/eshopping/Products",
      "DownstreamScheme": "https",
      "ServiceName": "InventoryService",
      "UpstreamPathTemplate": "/api/gateway/catalog/get-products",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AllowedScopes": ["api.read","api.write"],
        "AuthenticationProviderKey": "Bearer"
      }
    },
    {
      "UseServiceDiscovery": true,
      "DownstreamPathTemplate": "/api/Login/get-token",
      "DownstreamScheme": "https",
      "ServiceName": "LoginService",
      "UpstreamPathTemplate": "/api/gateway/login/get-token",
      "UpstreamHttpMethod": [ "Post" ]
    }
  ],
  "GlobalConfiguration": {
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": "8500",
      "Type": "Consul"
    }
  }
}